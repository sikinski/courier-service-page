.about-us 
    position relative
    width 100%
    text-align: center
    padding 40px 60px;
    .about-us_header 
        font-weight 600
        font-size 40px
        line-height 60px
        margin 0 auto
        margin-top: 20px

    .about-us_header-background
        position absolute
        top 0
        left calc(50% - 223px)
        font-weight: 600
        font-size 90px
        line-height 135px
        mix-blend-mode normal
        opacity 0.06
    .blue-text
        color purpleCol

    .description-section
        font-size 20px
        line-height 30px

    .about-us_body 
        display flex
        position relative
        margin-top: 100px
        .left-side 
            margin 0 20px
        .right-side 
            margin 0 20px
            .description-company
                text-align: left
                font-size 16px
                line-height 29px
                color #858585
            .benefits
                display flex
                position relative
                justify-content: space-between
                margin 20px 0
                .benefit 
                    position relative
                    width 29%
                    height auto
                    text-align: left
                    .number-benefit
                        display block
                        float left
                        width 50px
                        height 50px
                        color white
                        border-radius: 50%
                        padding 16px 0
                        text-align: center

                    .number-1 
                        background-color: purpleCol
                    .number-2
                        background-color: #37D679
                    .number-3 
                        background-color: yellowCol
                        
                    .arrow-icon
                        position absolute
                        top 25px
                        left 50px
                    .name-benefit
                        font-weight 500
                        font-size 16px
                        line-height 24px
                        margin-top: 62px
                        text-transform: uppercase
                    .description-benefit
                        margin 7px 0
                        font-size 14px
                        line-height 22px
                        color #AAAAAA




